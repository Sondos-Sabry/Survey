@model Questionnaire

<h2>@Model.Title</h2>


<form asp-action="SubmitAnswers" method="post">
    @for (int i = 0; i < Model.Questions.Count; i++)
    {
        <h4>@Model.Questions[i].Body</h4>
        <ul>
            @for (int j = 0; j < Model.Questions[i].Answers.Count; j++)
            {
                <li>
                    <input type="checkbox" name="selectedAnswers" value="@Model.Questions[i].Answers[j].Id" />
                    @Model.Questions[i].Answers[j].Text
                </li>
            }
        </ul>
    }

    <input type="submit" value="Submit" />
</form>
